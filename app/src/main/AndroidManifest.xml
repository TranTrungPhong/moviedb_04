<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.framgia.moviedb"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.movies.MoviesActivity"/>
        <activity android:name=".feature.moviedetail.MovieDetailActivity"
                  android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".feature.video.VideoActivity"
                  android:screenOrientation="landscape"/>
        <activity android:name=".feature.review.ReviewActivity"/>
    </application>

</manifest>
