<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.framgia.moviedb.data.model.Movie"/>

        <variable
            name="position"
            type="int"/>

        <variable
            name="handler"
            type="com.framgia.moviedb.ui.adapter.VerticalMovieItemActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:elevation="@dimen/dp_3"
        card_view:cardCornerRadius="0dp"
        android:onClick="@{() -> handler.movieClicked(position, movie)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_movie_poster"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_180"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                app:imageUrl="@{movie.fullPosterUrl}"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image_movie_poster"
                android:layout_alignTop="@+id/image_movie_poster"
                android:layout_alignBottom="@+id/image_movie_poster">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:ellipsize="end"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:padding="@dimen/dp_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16"
                        android:text="@{movie.title}"/>

                    <TextView
                        android:id="@+id/text_movie_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:ellipsize="end"
                        android:padding="@dimen/dp_5"
                        android:layout_below="@+id/text_movie_title"
                        android:layout_alignParentLeft="true"
                        android:text="@{movie.overview}"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/text_movie_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/image_movie_rate"
                            android:layout_alignTop="@+id/image_movie_rate"
                            android:layout_alignBottom="@+id/image_movie_rate"
                            android:textColor="@color/color_primary_dark"
                            android:text="@{movie.voteAverage}"/>

                        <ImageView
                            android:id="@+id/image_movie_rate"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_vote"/>

                        <ImageView
                            android:id="@+id/image_movie_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignBottom="@+id/text_movie_rate"
                            android:layout_alignTop="@+id/text_movie_rate"
                            android:src="@{movie.favorite ? @drawable/ic_favorite_filled : @drawable/ic_favorite}"
                            android:onClick="@{() -> handler.updateFavorite(position, movie)}"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>