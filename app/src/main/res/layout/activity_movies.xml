<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <import type="com.framgia.moviedb.util.LayoutManagerUtil"/>

        <variable
            name="moviesActivity"
            type="com.framgia.moviedb.feature.movies.MoviesActivity"/>

        <variable
            name="title"
            type="String"/>

        <variable
            name="presenter"
            type="com.framgia.moviedb.feature.movies.MoviesContract.Presenter"/>
    </data>

    <RelativeLayout
        android:id="@+id/activity_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:adapter="@{moviesActivity.verticalMovieAdapter}"
            bind:layoutManager="@{LayoutManagerUtil.linear()}"/>

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{moviesActivity.isLoading ? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/linear_retry"
            layout="@layout/retry_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            bind:isVisible="@{moviesActivity.isError}"
            bind:presenter="@{presenter}"/>

        <TextView
            android:id="@+id/text_message_no_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/message_no_item"
            android:textSize="@dimen/sp_24"
            android:visibility="@{moviesActivity.isNoFavoriteItem ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/text_message_no_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/message_no_search_result"
            android:textSize="@dimen/sp_24"
            android:visibility="@{moviesActivity.isNoSearchResult ? View.VISIBLE : View.GONE}"/>

    </RelativeLayout>
</layout>
