<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="movie"
            type="com.framgia.moviedb.data.model.Movie"/>

        <variable
            name="presenter"
            type="com.framgia.moviedb.feature.moviedetail.MovieDetailContract.Presenter"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@{movie.title}">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"
                        app:imageUrl="@{movie.backdrop != null ? movie.fullBackdropUrl : movie.fullPosterUrl}"/>

                    <ImageView
                        android:id="@+id/image_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_play"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:onClick="@{() -> presenter.openVideoDetail(movie.video.key)}"/>
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:descendantFocusability="blocksDescendants">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_movie_poster"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_180"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        app:imageUrl="@{movie.fullPosterUrl}"/>

                    <ImageView
                        android:id="@+id/image_movie_favorite"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:paddingRight="@dimen/dp_5"
                        android:src="@{movie.favorite ? @drawable/ic_favorite_filled : @drawable/ic_favorite}"
                        android:layout_alignParentRight="true"
                        android:onClick="@{() -> presenter.updateFavorite(movie.type, movie)}"/>

                    <TextView
                        android:id="@+id/text_movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_movie_poster"
                        android:layout_toLeftOf="@id/image_movie_favorite"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="@android:color/black"
                        android:text="@{movie.title}"
                        android:textSize="@dimen/sp_20"/>

                    <TextView
                        android:id="@+id/text_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_movie_title"
                        android:layout_toRightOf="@+id/image_movie_poster"
                        android:paddingLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:text="@{movie.releaseDate}"/>

                    <TextView
                        android:id="@+id/text_movie_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_release_date"
                        android:layout_toRightOf="@+id/image_movie_poster"
                        android:paddingLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:text="@{movie.voteAverage}"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/text_movie_rate"
                        android:layout_alignBottom="@+id/text_movie_rate"
                        android:layout_alignTop="@+id/text_movie_rate"
                        android:src="@drawable/ic_vote"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_movie_poster"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/title_review"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_accent"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:onClick="@{() -> presenter.openMovieReview(movie.title, String.valueOf(movie.id))}"/>

                    <TextView
                        android:id="@+id/text_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/dp_5"
                        android:text="@string/title_share"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_accent"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:onClick="@{() -> presenter.shareLink(movie.title, movie.video.key)}"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_height="@dimen/dp_1"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:text="@string/title_overview"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="@{movie.overview}"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_height="@dimen/dp_1"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:text="@string/title_genres"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_genres"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_height="@dimen/dp_1"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:text="@string/title_video"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_height="@dimen/dp_1"
                    android:background="@android:color/darker_gray"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:text="@string/title_cast"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_cast"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_height="@dimen/dp_1"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:text="@string/title_company"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_company"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
