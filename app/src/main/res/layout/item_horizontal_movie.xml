<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.framgia.moviedb.data.model.Movie"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:elevation="@dimen/dp_3"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_movie_poster"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_180"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                app:imageUrl="@{movie.fullPosterUrl}"/>

            <TextView
                android:id="@+id/text_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_movie_poster"
                android:layout_alignLeft="@+id/image_movie_poster"
                android:layout_alignRight="@+id/image_movie_poster"
                android:lines="2"
                android:padding="@dimen/dp_5"
                android:text="@{movie.title}"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_movie_title"
                android:padding="5dp"
                android:layout_alignLeft="@+id/image_movie_poster"
                android:layout_alignRight="@+id/image_movie_poster">

                <TextView
                    android:id="@+id/text_movie_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_primary_dark"
                    android:text="@{movie.voteAverage}"/>

                <ImageView
                    android:id="@+id/image_movie_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/text_movie_rate"
                    android:layout_alignBottom="@+id/text_movie_rate"
                    android:src="@{movie.favorite ? @drawable/ic_favorite_filled : @drawable/ic_favorite}"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
